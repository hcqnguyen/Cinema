<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateFilmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:background="@color/colorTitle"
        >
        <TextView
            android:text="@string/title_create_new_film"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/colorText"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_view_cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            />
        <Button
            android:id="@+id/button_choose_cover"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/action_choose_image"
            android:layout_gravity="center"
            android:background="@drawable/roundedbutton"
            android:textColor="@color/colorText"

            />
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/msg_film_name"

        />
    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/roundedtext"/>
    <TextView
        android:id="@+id/text_view_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/msg_film_kind"
        />


    <Spinner
        android:id="@+id/spinner_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@drawable/roundedtext"


        >
    </Spinner>

    <TextView
        android:id="@+id/text_view_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"

        android:text="@string/msg_start_day"
        />

    <TextView
        android:id="@+id/text_view_input_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:background="@drawable/roundedtext"
        />

    <TextView
        android:id="@+id/text_view_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/msg_discription"
        />

    <EditText
        android:id="@+id/edit_text_discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedtext"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:minHeight="50dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/button_create_film"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/action_create_film"
        android:background="@drawable/roundedbutton"
        android:textColor="@color/colorText"
        android:elevation="20dp"


        />
    </LinearLayout>
    </ScrollView>


</LinearLayout>