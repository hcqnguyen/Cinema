<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ListFilmActivity">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/colorTitle"
        >
        <LinearLayout
            android:id="@+id/linear_layout_go_open_profile"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:gravity="center"
            >
        <com.example.nguyen.cinema.Data.Model.IconTextView

            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="@string/fas_fa_user"
            android:layout_centerVertical="true"
            android:textSize="23dp"
            android:textColor="@color/colorText"
            />
        </LinearLayout>

        <TextView
            android:text="@string/titile_list_film"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorText"
            />
        <LinearLayout
            android:id="@+id/linear_layout_open_create_film"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"

            >
        <com.example.nguyen.cinema.Data.Model.IconTextView
            android:id="@+id/icon_text_view_create_film"

            android:text="@string/fas_plus"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="22dp"

            android:layout_marginRight="10dp"
            android:textColor="@color/colorText"
            />
        </LinearLayout>
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_list_film"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>