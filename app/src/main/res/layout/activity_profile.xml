<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <com.example.nguyen.cinema.Data.Model.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fas_chevron_back"
        android:textColor="@color/colorText"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/colorTitle"/>
    <com.example.nguyen.cinema.Data.Model.IconTextView
        android:id="@+id/icon_text_view_profile_back_to_list_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fas_chevron_back"
        android:textColor="@color/colorText"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/avatar"
                    android:layout_centerHorizontal="true"
                    android:elevation="1dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="85dp"
                        app:contentPaddingTop="15dp"
                        app:contentPaddingRight="15dp"
                        app:contentPaddingLeft="15dp"
                        app:contentPaddingBottom="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginTop="60dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/text_view_profile_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KAKALOT"
                                    android:textStyle="bold"
                                    android:textSize="25dp"

                                    />
                                <com.example.nguyen.cinema.Data.Model.IconTextView
                                    android:id="@+id/icon_text_view_edit_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorTitle"
                                    android:text="@string/fas_edit"
                                    android:paddingLeft="10dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.example.nguyen.cinema.Data.Model.IconTextView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/colorTitle"
                                    android:text="@string/fas_email"
                                    />
                                <TextView
                                    android:id="@+id/text_view_profile_email"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="qweasdz184@yahoo.com.vn"
                                    android:textSize="17dp"
                                    android:layout_marginTop="10dp"
                                    />
                            </LinearLayout>
                            <LinearLayout

                                android:paddingTop="10dp"

                                android:weightSum="5"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.example.nguyen.cinema.Data.Model.IconTextView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/colorTitle"
                                    android:text="@string/fas_phone"
                                    />
                                <TextView
                                    android:id="@+id/text_view_profile_number_phone"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:text="0156548965896"
                                    android:textSize="17dp"
                                    android:layout_marginTop="10dp"
                                    />
                                <com.example.nguyen.cinema.Data.Model.IconTextView

                                    android:id="@+id/icon_text_view_edit_phone_number"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/colorTitle"
                                    android:text="@string/fas_edit"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/button_change_password"
                                    android:layout_weight="1"
                                    android:text="@string/action_change_password"
                                    android:textColor="@color/colorTitle"
                                    android:background="@drawable/roundedtext"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:id="@+id/button_sign_out"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:text="@string/action_sign_out"
                                    android:textColor="@color/colorTitle"
                                    android:background="@drawable/roundedtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"

                        android:layout_marginTop="30dp"
                        app:contentPaddingTop="15dp"
                        app:contentPaddingRight="15dp"
                        app:contentPaddingLeft="15dp"
                        app:contentPaddingBottom="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_profile_list_film"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </android.support.v7.widget.RecyclerView>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>